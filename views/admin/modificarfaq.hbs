<div class="container" style="margin:100px">
    <div class="row">
        <div class="col-6 offset-3">
            <h2 class="text-center">Modificar FAQ</h2>
            <form action="/admin/faqs/modificarfaq" method="post">
                <input type="hidden" value="{{faq.id}}" name="id">
                <div class="form-group" style="margin:10px auto">
                    <label for="">Pregunta:</label>
                    <textarea type="text" class="form-control" name="pregunta">{{faq.pregunta}}</textarea>
                </div>
                <div class="form-group" style="margin:10px auto">
                    <label for="">Respuesta:</label>
                    <textarea type="text" class="form-control" name="respuesta">{{faq.respuesta}}</textarea>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="margin:10px auto">
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>